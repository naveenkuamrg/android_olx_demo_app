<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/posted_date_higher_to_lower"
        android:layout_width="match_parent"
        style="?attr/materialIconButtonStyle"
        android:text="Posted date higher to lower"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/posted_date_lower_to_higher"
        android:layout_width="match_parent"
        style="?attr/materialIconButtonStyle"
        android:text="Posted date lower to higher"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/price_lower_to_higher"
        android:layout_width="match_parent"
        style="?attr/materialIconButtonStyle"
        android:text="Price lower to higher"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/price_date_lower_to_higher"
        android:layout_width="match_parent"
        style="?attr/materialIconButtonStyle"
        android:text="price lower to higher"
        android:layout_height="wrap_content"/>
</LinearLayout>