<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:elevation="0dp"
        android:defaultFocusHighlightEnabled="false"
        android:layout_width="23dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/md_theme_primary" />

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="13dp"
        android:id="@+id/posted_date_higher_to_lower"
        android:layout_width="match_parent"
        style="?attr/materialIconButtonStyle"
        android:text="Posted date new to old"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/posted_date_lower_to_higher"
        android:layout_width="match_parent"
        style="?attr/materialIconButtonStyle"
        android:text="Posted date old to new"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/price_lower_to_higher"
        android:layout_width="match_parent"
        style="?attr/materialIconButtonStyle"
        android:text="Price low to high"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/price_date_lower_to_higher"
        android:layout_width="match_parent"
        style="?attr/materialIconButtonStyle"
        android:text="price high to low"
        android:layout_height="wrap_content"/>
</LinearLayout>